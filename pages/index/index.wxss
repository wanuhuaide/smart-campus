.daohang{
  width: 90%;
  margin: auto;
  height: 300rpx;
  position: relative;
}
.daohang image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.daohangword{
  position: absolute;
  top: 40rpx;
  left: 30rpx;
  color: white;
}
.daohangwordone{
  font-size: 23rpx;
  line-height: 40rpx;
}
.daohangt{
  font-weight: 900;
}
.daohangb{
  width: 100rpx;
  text-align: center;
  font-size: 23rpx;
  padding: 10rpx;
  border: 1px solid white;
  border-radius: 15rpx;
}
.flexbox{
  width: 98%;
  margin: auto;
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}
.flexitem{
  width: 100rpx;
  height: 100rpx;
  background-color: red;
  border-radius: 50%;
  text-align: center;
  line-height: 78rpx;
  font-size: 25rpx;
}
.flexitem image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 25rpx;

