/**index.wxss**/
.daohang{
  width: 90%;
  margin: auto;
  height: 300rpx;
  position: relative;
}
.daohang image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.daohangword{
  position: absolute;
  top: 40rpx;
  left: 30rpx;
  color: white;
}
.daohangwordone{
  font-size: 23rpx;
  line-height: 40rpx;
}
.daohangt{
  font-weight: 900;
}
.daohangb{
  width: 100rpx;
  text-align: center;
  font-size: 23rpx;
  padding: 10rpx;
  border: 1px solid white;
  border-radius: 15rpx;
}
.flexbox{
  width: 98%;
  margin: auto;
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}
.flexitem{
  width: 100rpx;
  height: 100rpx;
  background-color: red;
  border-radius: 50%;
  text-align: center;
  line-height: 70rpx;
  font-size: 25rpx;
}

.yellow{
  background-color: #f7ae5c;
}
.purple{
  background-color: #8f6aff;
}
.red{
  background-color: #ec1e71;
}
.green{
  background-color: #03e391;
}
.blue{
  background-color: #1e9dff;
}
.flexitem>image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 25rpx;
}
.flexboxone{
  width: 90%;
 margin:220rpx auto;
display: flex;
justify-content: space-between;
}
.flexitemone{
  position: relative;
}
.flexitemone:nth-child(1){
  width: 45%;
  height: 200rpx;
  background-image: linear-gradient(to right,#feb27a,#ff7d5d);
  /* background-color: red; */
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
  border-bottom-left-radius: 15rpx;
}
.flexitemone:nth-child(1)>image{
  width: 60%;
  height: 86%;
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
}
.flexitemone:nth-child(2){
  width: 45%;
  height: 200rpx;
  background-image: linear-gradient(to right,#93f7da,#68d0e3);
  /* background-color: red; */
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
  border-bottom-left-radius: 15rpx;
}
.flexitemone:nth-child(2)>image{
  height: 95%;
  width: 70%;
  float: right;
  position: absolute;
  right: -10rpx;
  top: 10rpx;
}
.titletext{
  position: absolute;
  top: 50rpx;
  right: 30rpx;
line-height: 35rpx;
color: white;
}
.titletext>view:nth-child(2){
  font-size: 22rpx;
}
.titletextright{
  position: absolute;
  top: 50rpx;
  left: 20rpx;
line-height: 35rpx;
color: white;
}
.titletextright>view:nth-child(2){
  font-size: 22rpx;
}
.noticecircle{
  position: absolute;
