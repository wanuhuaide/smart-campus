<!--pages/brushface/brushface.wxml-->

<head></head>
<view class="box">
    <!-- 返回按钮 -->
    <view class="fanhui">
        <image src="/imgs/fanhui.png" mode=""  bindtap="goLogin" />
    </view>
    <!-- 返回按钮 end -->
<!-- 头像 -->
<view class="avatar">
        <image src="/imgs/avatar.jpg" mode=""/>
    </view>
    <!-- 头像 end -->
    <view class="name">张皓宁你好</view>
    <view class="welcome">欢迎登录智慧门户系统,请进行人脸验证</view>
    <!-- 人脸识别图像文字 end -->
    <view class="shualian">
        <image src="/imgs/shualianLogin.png" mode=""/>
    </view>
    <view class="jieshao">点击进行人脸识别</view>
    <!-- 人脸识别图像文字 end -->
    <!-- 底部其他登录方式 -->
    <view class="buttomLoginBox">
        <view class="bl">
            <image src="/imgs/shualian.png" mode="" />
            <view class="otherLoginText">刷脸登录</view>
        </view>
        <view class="bl" bindtap="goOneClickLogin">
            <image src="/imgs/weibo.png" mode="" />
            <view class="otherLoginText" >一键登录</view>
        </view>
        <view class="bl">
            <image src="/imgs/weixin.png" mode="" />
            <view class="otherLoginText">微信登录</view>
        </view>
    </view>
    <!-- 底部其他登录方式 -->

</view>