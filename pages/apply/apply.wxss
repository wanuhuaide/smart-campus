/* pages/apply/apply.wxss */
.box {
  width: 350px;
  height: 680px;
  margin: 0 auto;
  margin-top: 10px;
}

.headBox {
  width: 100%;
  height: 44px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 2px solid #FEF7FF;
}

.headBoxTitle {
  height: 44px;
  width: 60px;
  font-size: 18px;
  font-weight: 600;
  text-align: center;
  line-height: 44px;
}

.searchBox {
  height: 25px;
  width: 200px;
  margin-top: 10px;
  border-radius: 10px;
  border: 1px solid #FEF7FF;
}

.searchBox image {
  height: 25px;
  width: 25px;
  float: left;
  margin-left: 5px;
}

.searchBox input {
  height: 25px;
  float: left;
  font-size: 12px;
  width: 160px;
  color: rgb(74, 75, 75);
  margin-left: 8px;
}

.headBoxRight {
  height: 100%;
  width: 100px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.headBoxRight image {
  width: 23px;
  height: 23px;
}

.twoCardBox {
  width: 350px;
  height: 90px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.card1,
.card2 {
  width: 160px;
  height: 90px;
  background-color: lightblue;
  position: relative;
  border-radius: 15px;
  color: white;
}

.card1 {
  background: linear-gradient(-90deg, #FF9671, #F9F871);
}

.card2 {
  background: linear-gradient(-90deg, #00C9A7, #4FFBDF);
}

#cardImage1,
#cardImage2 {
  position: absolute;
}
#cardImage1{
  top: 20px;
  left: 10px;
}
#cardImage2 {
  top: 20px;
}

.cardContent1 {
  width: 80px;
  height: 40px;
  position: absolute;
  left: 80px;
  top: 25px;
}

.cardContent2 {
  width: 80px;
  height: 40px;
  position: absolute;
  left: 80px;
  top: 25px;
}

.recommendation {
  width: 100%;
  height: 160px;
  margin-top: 20px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.recommendation1,
.recommendation2,
.recommendation3 {
  background-color: white;
  width: 114px;
  height: 160px;
  border-radius: 10px;
  box-shadow: 0 5px 5px rgba(0, 0, 0, .1);
}

.imageBox {
  width: 100%;
  height: 45px;
  margin-top: 5px;
}

.imageBox image {
  height: 45px;
  width: 45px;
  margin-left: 30px;
}

.recommendationContent {
  width: 100%;
  height: 60px;
  margin-top: 5px;
}

.chengjichaxun {
  font-size: 14px;
  font-weight: 600;
  width: 100%;
  text-align: center;
}

.chakanBox {
  width: 55px;
  height: 15px;
  background-color: rgb(235, 236, 231, 0.4);
  border-radius: 5px;
  margin-left: 25px;
  margin-top: 5px;
}

.recommendationContent image {
  width: 20px;
  height: 15px;
  float: left;
}

.chakanBoxText {
  font-size: 9px;
  float: left;
  line-height: 15px;
  margin-left: 5px;
  color: rgb(117, 117, 116);
}
.addImageBox{
  width: 100%;
  height: 30px;
}
.addImageBox image{
  width: 30px;
  height: 30px;
  margin-left: 38px;
}

.menu{
  height: 30px;
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 15px;
}
.menu1{
  font-size: 14px;
  width: 70px;
  height: 30px;
  text-align: center;
  line-height: 48px;
  font-weight: 600;
}
#menuFirst{
  font-size: 14px;
  width: 90px;
  height: 30px;
  font-size: 20px;
  font-weight: 600;
  text-align: center;
  line-height: 40px;
  border-bottom: 2px solid greenyellow;
}
.endNewText{
  font-size: 15px;
  font-weight: 600;
  margin-top: 20px;
  margin-left: 5px;
}
.appBox{
  width: 100%;
  height: 130px;
  margin-top: 20px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
}
.appBoxList{
  width: 80px;
  height: 50px;
  text-align: center;
}
.appBoxList image{
  width: 25px;
  height: 25px;
}
.dianzijiaowu{
  font-size: 15px;
  font-weight: 600;
  margin-left: 5px;
}
.appBox2{
  width: 100%;
  height: 50px;
  margin-top: 20px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.appBox2List{
  width: 80px;
  height: 50px;
  text-align: center;
}
.appBox2List image{
  width: 25px;
  height: 25px;
}