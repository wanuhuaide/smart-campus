<!--pages/login/login.wxml-->

<head></head>
<view class="box">
    <!-- 顶部 -->
    <view class="top">
        <image src="/imgs/guanbi.png" mode="" />
        <view class="topRight" bindtap='goOneClickLogin'>验证码登录</view>
    </view>
    <!-- 顶部 end -->

    <!-- 账号密码登录 -->
    <view class="loginTitle">账号密码登录</view>
    <!-- 账号密码登录 end -->

    <!-- 输入框 -->
    <view class="loginBox">
        <input class="input" name="username" placeholder="请输入登录账号" placeholder-class="placeholderColor" bindinput='searchUserName' />
        <input class="password" type="password" name="userName" placeholder="请输入密码" placeholder-class="placeholderColor" bindinput='searchPassWord' />
    </view>
    <!-- 输入框 end -->

    <!-- 账号密码登录提示 -->
    <view class="question">登录遇到问题？</view>
    <!-- 账号密码登录提示 end -->

    <!-- 点击登录 -->
    <view class="loginBtn" bindtap='go'>登录</view>
    <!-- 点击登录 -->

    <!-- 底部其他登录方式 -->
    <view class="buttomLoginBox">
        <view class="bl" bindtap='goBrushFace'>
            <image src="/imgs/shualian.png" mode="" />
            <view class="otherLoginText">刷脸登录</view>
        </view>
        <view class="bl" bindtap="goOneClickLogin">
            <image src="/imgs/weibo.png" mode="" />
            <view class="otherLoginText">一键登录</view>
        </view>
        <view class="bl">
            <image src="/imgs/weixin.png" mode="" />
            <view class="otherLoginText">微信登录</view>
        </view>
    </view>
    <!-- 底部其他登录方式 -->




</view>